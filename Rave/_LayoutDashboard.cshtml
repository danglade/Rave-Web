                        @{ DataTable parents = Rave.Utils.Layout.GetParents(ses.Tables[4]);}

                        @foreach (DataRow parent in parents.Rows)
                        {
                            <li class="nav-item-header"><div class="text-uppercase font-size-xs line-height-xs">@parent["name"].ToString()</div> <i class="icon-menu" title="Layout options"></i></li>

                            foreach (DataRow first_child in Rave.Utils.Layout.GetChildrens(ses.Tables[4], parent["id"].ToString()).Rows)
                            {
                                <li class="nav-item nav-item-submenu" )">
                                    <a href="@first_child["url"].ToString()" class="nav-link @(controllerName == first_child["url"].ToString() ? " active" : "")"><i class="@first_child["icon"].ToString()"></i> <span>@first_child["name"].ToString()</span></a>

                                    <ul class="nav nav-group-sub" data-submenu-title="@first_child["name"].ToString()" style="display: none;">
