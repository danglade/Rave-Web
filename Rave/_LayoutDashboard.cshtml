                        @foreach (DataRow rw in ses.Tables[5].Rows)
                        {
                            if (rw["name"].ToString() == "separator")
                            {
                                <div class="dropdown-divider"></div>
                                continue;
                            }
                            <a href="@rw["link"].ToString()" class="dropdown-item"><i class="@rw["icon"].ToString()"></i> @rw["name"].ToString()</a>
