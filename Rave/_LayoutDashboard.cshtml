                        <div class="media">
                            <div class="mr-3">
                                <a href="#"><img src="~/Assets/images/placeholders/placeholder.jpg" width="38" height="38" class="rounded-circle" alt=""></a>
                            </div>

                            <div class="media-body">
                                <div class="media-title font-weight-semibold">@first_name</div>
