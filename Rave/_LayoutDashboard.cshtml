                                            <li class="nav-item nav-item-submenu" )">
                                                <a href="@second_child["url"].ToString()" class="nav-link">@second_child["name"].ToString()</a>

                                                @foreach (DataRow third_child in Rave.Utils.Layout.GetChildrens(ses.Tables[4], second_child["id"].ToString()).Rows)
                                                {
                                                    <ul class="nav nav-group-sub" style="display: none;">
                                                        <li class="nav-item" )"><a href="navbar_single_top_static.html" class="nav-link">@third_child["name"].ToString()</a></li>
                                                    </ul>

                                                    foreach (DataRow fourth_child in Rave.Utils.Layout.GetChildrens(ses.Tables[4], third_child["id"].ToString()).Rows)
                                                    {
                                                        <ul class="nav nav-group-sub" style="display: block;">
                                                            <li class="nav-item"><a href="navbar_single_top_static.html" class="nav-link">@fourth_child["name"].ToString()</a></li>
                                                        </ul>
                                                    }
